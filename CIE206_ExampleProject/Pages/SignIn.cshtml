@page
@model CIE206_ExampleProject.Pages.SignInModel
@{
    Layout = null;
}

<head>
    <title>@ViewData["Title"] - CIE206_ExampleProject</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CIE206_ExampleProject.styles.css" asp-append-version="true" />
</head>

<body>
    <div class="container align-items-center" style="vertical-align: middle;">
        <main role="main" class="pb-3">
        <center><h2>Sign In</h2></center>

        <center>
            <form method="post" class="col-4">
                <input type="text" placeholder="username" asp-for="username" class="form-control" />
                <br />
                <input type="password" placeholder="password" asp-for="password" class="form-control" />
                <br />
                <button type="submit" class="btn btn-primary">Login</button>

                <p class="text-danger">@Model.msg</p>
                 <span>Don't have an account? <a asp-page="/SignUp">Sign up!</a></span>
            </form>
        </center>
        </main>
    </div>
</body>